pipeline {
    agent any
	tools{
		maven 'localMaven'
		jdk 'localJDK'
	}
	
	  parameters {
         string(name: 'tomcat_dev', defaultValue: 'http://localhost:8090/', description: 'Tomcat Server')
    }
	
	 triggers {
         pollSCM('* * * * *')
     }
    stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage ('Deployment'){
          stage ('Deploy'){
                    steps {
						bat "copy /Y C:\Program Files (x86)\Jenkins\workspace\pipe\webapp\target/*.war C:\Program Files\Apache Software Foundation\Tomcat 9.0"
                    }
                }
        }


    }
}